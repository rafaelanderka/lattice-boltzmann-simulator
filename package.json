{
  "name": "lattice-boltzmann-simulator",
  "version": "0.2.0",
  "description": "A WebGL fluid simulation tool implementing the lattice Boltzmann method (LBM) for advection-diffusion problems.",
  "scripts": {
    "clean": "rimraf dist && rimraf .parcel-cache",
    "prestart": "npm run clean",
    "start": "parcel ./src/index.html",
    "predeploy": "npm run clean && parcel build ./src/index.html --public-url /lattice-boltzmann-simulator",
    "deploy": "gh-pages -d dist",
    "prebuild": "npm run clean",
    "build": "parcel build ./src/index.html"
  },
  "license": "MIT",
  "dependencies": {
    "normalize.css": "^8.0.1",
    "raf": "^3.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-range": "^1.8.12"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@parcel/packager-raw-url": "^2.3.2",
    "@parcel/packager-xml": "^2.3.2",
    "@parcel/transformer-webmanifest": "^2.3.2",
    "@parcel/transformer-xml": "^2.3.2",
    "gh-pages": "^3.2.3",
    "parcel": "^2.3.2",
    "process": "^0.11.10",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  }
}
